{
  "name": "diverga-opencode-plugin",
  "version": "8.4.0",
  "description": "Diverga Research Coordinator - Multi-agent system for social science research (OpenCode Plugin)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opencode",
    "plugin",
    "research",
    "social-science",
    "meta-analysis",
    "systematic-review",
    "diverga"
  ],
  "author": "Hosung You",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.10",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HosungYou/Diverga.git",
    "directory": ".opencode/plugins/diverga"
  }
}
