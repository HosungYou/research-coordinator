{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/settings.schema.json",
  "name": "diverga",
  "version": "8.0.1",
  "description": "Diverga - AI Research Assistant with 44 specialized agents, VS methodology, and human checkpoints",
  "author": "Hosung You",
  "repository": "https://github.com/HosungYou/Diverga",

  "agents": {
    "source": "./agents/",
    "pattern": "*.md",
    "prefix": "diverga:",
    "count": 40
  },

  "skills": {
    "source": "./skills/",
    "include": [
      "research-coordinator",
      "research-orchestrator",
      "research-agents/*",
      "help",
      "setup"
    ]
  },

  "settings": {
    "defaultModel": "sonnet",
    "checkpointEnforcement": "strict",
    "vsMethodology": true,
    "koreanSupport": true,
    "autoTrigger": true,
    "multiCLICompatible": true
  },

  "modelRouting": {
    "opus": {
      "agents": ["a1", "a2", "a3", "a5", "b5", "c1", "c2", "c3", "c5", "d4", "e1", "e2", "e3", "g6", "h1", "h2"],
      "taskTypes": ["complex_reasoning", "deep_analysis", "framework_design", "meta_analysis"]
    },
    "sonnet": {
      "agents": ["a4", "a6", "b1", "b2", "c4", "c6", "c7", "d1", "d2", "e5", "f3", "f4", "g1", "g2", "g3", "g4", "g5"],
      "taskTypes": ["standard_analysis", "literature_review", "quality_assessment"]
    },
    "haiku": {
      "agents": ["b3", "b4", "d3", "e4", "f1", "f2", "f5"],
      "taskTypes": ["quick_lookup", "code_generation", "simple_validation"]
    }
  },

  "checkpoints": {
    "required": {
      "level": "red",
      "icon": "ðŸ”´",
      "behavior": "halt",
      "items": [
        "CP_RESEARCH_DIRECTION",
        "CP_PARADIGM_SELECTION",
        "CP_THEORY_SELECTION",
        "CP_METHODOLOGY_APPROVAL",
        "CP_VS_001",
        "CP_VS_003"
      ]
    },
    "recommended": {
      "level": "orange",
      "icon": "ðŸŸ ",
      "behavior": "pause",
      "items": [
        "CP_ANALYSIS_PLAN",
        "CP_INTEGRATION_STRATEGY",
        "CP_QUALITY_REVIEW",
        "CP_SCREENING_CRITERIA",
        "CP_SAMPLING_STRATEGY",
        "CP_CODING_APPROACH",
        "CP_THEME_VALIDATION",
        "CP_HUMANIZATION_REVIEW"
      ]
    },
    "optional": {
      "level": "yellow",
      "icon": "ðŸŸ¡",
      "behavior": "ask",
      "items": [
        "CP_VISUALIZATION_PREFERENCE",
        "CP_SEARCH_STRATEGY",
        "CP_WRITING_STYLE",
        "CP_PROTOCOL_DESIGN",
        "CP_HUMANIZATION_VERIFY"
      ]
    }
  },

  "triggers": {
    "researchCoordinator": {
      "keywords": [
        "research question",
        "theoretical framework",
        "hypothesis",
        "literature review",
        "meta-analysis",
        "effect size",
        "IRB",
        "PRISMA",
        "statistical analysis",
        "sample size",
        "bias",
        "journal",
        "peer review",
        "conceptual framework",
        "visualization",
        "systematic review",
        "qualitative",
        "phenomenology",
        "grounded theory",
        "thematic analysis",
        "mixed methods",
        "interview",
        "focus group",
        "ethnography",
        "action research"
      ],
      "skill": "research-coordinator"
    }
  },

  "agentCategories": {
    "A": {
      "name": "Research Foundation",
      "description": "Theory, ethics, paradigm, and research question design",
      "agents": ["a1", "a2", "a3", "a4", "a5", "a6"]
    },
    "B": {
      "name": "Literature & Evidence",
      "description": "Systematic review, quality appraisal, effect size extraction",
      "agents": ["b1", "b2", "b3", "b4", "b5"]
    },
    "C": {
      "name": "Study Design & Meta-Analysis",
      "description": "Quantitative, qualitative, mixed methods, and meta-analysis",
      "agents": ["c1", "c2", "c3", "c4", "c5", "c6", "c7"]
    },
    "D": {
      "name": "Data Collection",
      "description": "Sampling, interviews, observations, instruments",
      "agents": ["d1", "d2", "d3", "d4"]
    },
    "E": {
      "name": "Analysis",
      "description": "Statistical, qualitative coding, mixed methods integration",
      "agents": ["e1", "e2", "e3", "e4", "e5"]
    },
    "F": {
      "name": "Quality & Validation",
      "description": "Consistency, checklists, reproducibility, bias detection",
      "agents": ["f1", "f2", "f3", "f4", "f5"]
    },
    "G": {
      "name": "Publication & Communication",
      "description": "Journal matching, writing, peer review, humanization",
      "agents": ["g1", "g2", "g3", "g4", "g5", "g6"]
    },
    "H": {
      "name": "Specialized Methods",
      "description": "Ethnography, action research",
      "agents": ["h1", "h2"]
    }
  },

  "compatibility": {
    "multiCLI": true,
    "supportedCLIs": ["claude-code", "codex-cli", "opencode"],
    "installScripts": {
      "claude": "./scripts/install.sh",
      "codex": "./scripts/install-codex.sh",
      "opencode": "./scripts/install-opencode.sh",
      "all": "./scripts/install-all-plugins.sh"
    }
  }
}
